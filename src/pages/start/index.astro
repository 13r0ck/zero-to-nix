---
import Container from "../../components/Container.astro";
import Grid2 from "../../components/Grid2.astro";
import Hero from "../../components/Hero.astro";
import Standard from "../../layouts/Standard.astro";

const pages = await Astro.glob("./*.{md,mdx}");

const sorted = pages.sort((p1, p2) => p1.frontmatter.weight - p2.frontmatter.weight);
---

<Standard>
  <Container>
    <div class="py-16">
      <Hero title="Quick start" description="Feel the power of Nix in no time" />
    </div>

    <Grid2>
      {sorted.map((page) => (
        <a href={page.url} class="border-2 hover:border-teal-500 block rounded py-2.5 px-4 h-full">
          <span class="flex items-center space-x-4">
            <span class="text-xl">
              <span class="font-semibold">{page.frontmatter.weight}</span>. {page.frontmatter.title}
            </span>
          </span>
        </a>
      ))}
    </Grid2>
  </Container>
</Standard>
