---
import Grid2 from "../../components/Grid2.astro";
import Hero from "../../components/Hero.astro";
import HoverableLink from "../../components/HoverableLink.astro";
import Standard from "../../layouts/Standard.astro";

const pages = await Astro.glob("./*.{md,mdx}");

const sorted = pages.sort(
  (p1, p2) => p1.frontmatter.weight - p2.frontmatter.weight
);

const title = "Quick start";
const description = "Feel the power of Nix in no time";
---

<Standard>
  <Hero title={title} description={description} size="normal" />

  <Grid2>
    {
      sorted.map((page) => (
        <HoverableLink
          title={`${page.frontmatter.weight}. ${page.frontmatter.title}`}
          href={page.url}
        />
      ))
    }
  </Grid2>
</Standard>
