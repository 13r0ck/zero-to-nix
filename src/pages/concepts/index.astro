---
import Hero from "../../layouts/components/Hero.astro";
import Grid3 from "../../layouts/components/Grid3.astro";
import Standard from "../../layouts/Standard.astro";
import HoverableLink from "../../layouts/components/HoverableLink.astro";

const pages = await Astro.glob("./*.{md,mdx}");

const title = "Nix concepts";
const description = "The whys and the hows of Nix";
---

<Standard>
  <Hero title={title} description={description} size="normal" />

  <Grid3>
    {
      pages.map((page) => (
        <HoverableLink title={page.frontmatter.title} href={page.url} />
      ))
    }
  </Grid3>
</Standard>
