---
import type { HoverableLinkProps } from "../types";

type Props = HoverableLinkProps;

const { title, href, size: initialSize } = Astro.props;
const size = initialSize ?? "normal";
---

<a
  href={href}
  class:list={[
    "border-2 border-light-gray dark:border-gray rounded-lg hover:border-primary hover:bg-pale dark:hover:border-primary",
    size === "normal" && "py-3.5 px-5 text-2xl tracking-tight",
    size === "sm" && "py-2 px-3.5 text-xl",
  ]}
>
  {title}
</a>
