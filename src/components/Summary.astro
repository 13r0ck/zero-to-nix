---
const { items } = Astro.props;
---

<div
  class="flex flex-col md:flex-row items-start flex-nowrap space-y-2 md:space-y-0 md:space-x-6 rounded-lg bg-slate-50 border-2 border-slate-300 py-4 px-6 dark:bg-black dark:border-slate-500"
>
  <span class="text-lg md:text-xl lg:text-2xl font-bold">In this guide</span>
  <span>
    {
      items.map((item: string) => (
        <p class="text-sm md:text-normal lg:text-lg space-x-3">
          <>
            <span class="font-semibold">&RightArrow;</span>
            <span class="first-letter:text-bold">{item}</span>
          </>
        </p>
      ))
    }
  </span>
</div>
