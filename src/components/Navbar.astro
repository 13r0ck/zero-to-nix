---
import ThemeToggler from "./ThemeToggler";
import NixOSIcon from "../icons/NixOSIcon";

type Link = {
  title: string;
  href: string;
};

const links: Link[] = [
  {title: "Quick start", href: "/start"},
  {title: "Concepts", href: "/concepts"},
];

const { title } = Astro.props;
const url = Astro.url.pathname;
---

<nav class="sticky top-0 bg-slate-200 py-4 shadow-lg dark:bg-black dark:border-b dark:border-b-slate-500">
  <div class="container mx-auto flex justify-between items-center px-6">
    <div class="flex space-x-3 items-center">
      <a href="/" class="text-3xl tracking-tighter font-semibold hover:text-blue-500 dark:text-slate-100 dark:hover:text-blue-500">{title}</a>

      <span>
        <NixOSIcon client:only />
      </span>
    </div>

    <div class="flex items-center space-x-6">
      <ul class="flex items-center space-x-4">
        {links.map((link) => <li>
          <a href={link.href} class:list={["dark:text-slate-100 hover:text-blue-500 dark:hover:text-blue-300", url.startsWith(link.href) ? "font-bold" : "font-normal"]}>
            {link.title}
          </a>
        </li>)}
      </ul>

      <div>
        <ThemeToggler client:only />
      </div>
    </div>
  </div>
</nav>
