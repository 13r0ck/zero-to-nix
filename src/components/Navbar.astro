---
import { Icon } from "astro-icon";

type Link = {
  title: string;
  href: string;
};

const links: Link[] = [
  {title: "Quick start", href: "/start"},
  {title: "Concepts", href: "/concepts"},
];

const { title } = Astro.props;
const url = Astro.url.pathname;
---

<nav class="sticky top-0 bg-slate-200 py-4 shadow">
  <div class="container mx-auto flex justify-between items-center px-6">
    <div class="flex space-x-2 items-center">
      <Icon name="simple-icons:nixos" class="h-6 w-6 text-sky-600" client:only />
      <a href="/" class="text-2xl font-semibold hover:text-blue-500">{title}</a>
    </div>

    <div>
      <ul class="flex items-center space-x-4">
        {links.map((link) => <li>
          <a href={link.href} class:list={["hover:text-blue-500", url.startsWith(link.href) ? "font-bold" : "font-normal"]}>
            {link.title}
          </a>
        </li>)}
      </ul>
    </div>
  </div>
</nav>
