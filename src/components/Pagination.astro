---
const { weight } = Astro.props;
const steps = await Astro.glob("../pages/start/*.mdx");
const next = await steps.find(s => s.frontmatter.weight === weight + 1);
const previous = await steps.find(s => s.frontmatter.weight === weight - 1);
---

<div class="flex flex-col md:flex-row items-center justify-between text-2xl tracking-tight">
  <div>
    {previous && <span>Previous: <a href={previous.url} class="font-semibold hover:text-blue-500">{previous.frontmatter.title}</a></span>}
  </div>

  <div>
    {next && <span>Next: <a href={next.url} class="font-semibold hover:text-blue-500">{next.frontmatter.title}</a></span>}
  </div>
</div>
